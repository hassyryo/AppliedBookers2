
<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
    <% end %>
<!-- ユーザーの投稿一覧 -->
<div class="container">  <!-- この行を追加 -->
  <div class="row"> 
  <div class="col-md-3 " >
<%= render 'books/list', books: @books %>
</div>
<div class="col-md-8 offset-md-1"> 
  <h1 class="heading">Books</h1>
    <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>  
          <tr>
          <td>
          <span>
          <% if book.user.profile_image.present? %>
             <%= link_to "/users/#{book.user.id}" do %>
            <%= image_tag book.user.profile_image, size: "100x100" %>
            <% end %>
          <% else %>
             <%= link_to "/users/#{book.user.id}" do %>
            <%= image_tag 'no_image.jpg', size: "100x100" %> 
            <% end %>
          <% end %>
          <span> 
            <span><%= link_to book.title , "/books/#{book.id}" %></span>
          </td>
          <td>
            <span><%= book.body %></span>
          </td>
          <td>
          <% if book.favorited_by?(current_user) %>
          <p>
          <%= link_to book_favorite_path(book), method: :delete do %>
            <i class="fa-solid fa-heart"></i><%= book.favorites.count %> 
          <% end %>
          </p>
          <% else %>
          <p>
          <%= link_to book_favorite_path(book), method: :post do %>
            <i class="fa-regular fa-heart"></i><%= book.favorites.count %>
          <% end %>
          </p>
          <% end %>
          </td>
          <td>
          <span>
          <p>コメント件数：<%= book.book_comments.count %></p>
          <span>
          </td>
          </tr>
          <% end %>          
        </tbody>
      </table>
      </div>
    </div>
  </div>